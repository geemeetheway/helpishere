<h1>Login</h1>
<% form_tag :action => "login" do  %>
  <table id="login">
    <tr>
      <td>
        Email:
      </td>
      <td>
        <%= text_field_tag  'login', nil, {:class => "text ui-large"} %>
      </td>
    </tr>
    <tr>
      <td>
        Password:
      </td>
      <td>
        <%= password_field_tag 'password',nil, :class => "text ui-large"  %>
      </td>
    </tr>
    <tr>
      <td colspan="2" style="text-align:right;padding-top:20px">
        <%= submit_tag 'Log In', :class => "ui-large" %>
      </td>
    </tr>
  </table>

<% end %>